        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Artist</th>
          <th>Action</th>
        </tr>
        <%for(let i=0;i<dataMusic.length;i++){%>
          <tr>
            <td>
              <%=dataMusic[i].title%>
            </td>
            <td>
              <%=dataMusic[i].category%>
            </td>
            <td>
              <%=dataMusic[i].artist%>
            </td>
            <td>
              <input type="radio" name="musicId" value="<%=dataMusic[i].id%>">
              <input type="submit" value="add">
            </td>
          </tr>

          <%}%>
      </table>
    </form>







  </body>

</html>